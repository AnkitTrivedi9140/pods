<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="3dp"
        android:elevation="3dp"
card_view:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/dl_row_selected"
        card_view:cardCornerRadius="0dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/productiv"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_margin="11dp"
                android:background="@color/platinum"
                android:cropToPadding="true"
                >
            </ImageView>

            <RelativeLayout
                android:layout_toRightOf="@+id/productiv"
                android:id="@+id/relative"
android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tvcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Delivered on 03 February, 2021"
                    android:textColor="#05B720"
                    android:textSize="12dp"
                    />




                <TextView
                    android:layout_below="@+id/tvcome"
                    android:id="@+id/tvAssetType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Asset Type"
                    android:textColor="@color/text_color_setting"
                    android:textSize="22dp"
                    />



                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:lines="1"
                    android:layout_below="@+id/tvAssetType"
                    android:text="price"
                    android:textColor="@color/term_and_conditions"
                    android:textSize="18dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:visibility="visible"
                    android:lines="1"
                    android:layout_marginLeft="22dp"
                    android:layout_below="@+id/tvAssetType"
                    android:text="Qty_1"
                    android:layout_toRightOf="@+id/description"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="normal" />



            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>