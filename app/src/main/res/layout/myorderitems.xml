<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="2dp"
        android:elevation="3dp"
        android:layout_centerInParent="false"
card_view:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/dl_row_selected"
        android:layout_marginBottom="4dp"
        card_view:cardCornerRadius="0dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/productiv"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_margin="11dp"
                android:layout_marginTop="6dp"
                android:cropToPadding="true"

                >
            </ImageView>

            <RelativeLayout
                android:layout_toRightOf="@+id/productiv"
                android:id="@+id/relative"
android:layout_marginTop="18dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvorderdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
android:textStyle="bold"
                    android:text="Delivered on 03 February, 2021"
                    android:textColor="@color/term_and_conditions"
                    android:textSize="12dp"
                    />


                <TextView
                    android:layout_below="@+id/tvorderdate"
                    android:id="@+id/tvcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Delivered on 03 February, 2021"
                    android:textColor="#05B720"
                    android:textSize="12dp"
                    />




                <TextView
                    android:layout_below="@+id/tvcome"
                    android:id="@+id/tvAssetType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Asset Type"
                    android:textColor="@color/text_color_setting"
                    android:textSize="22dp"
                    />



                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:lines="1"
                    android:layout_below="@+id/tvAssetType"
                    android:text="price"
                    android:textColor="#13B3A7"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:layout_marginTop="3dp"
                    android:visibility="visible"
                    android:lines="1"
                    android:layout_marginLeft="8dp"
                    android:layout_below="@+id/tvAssetType"
                    android:text="Qty_1"
                    android:layout_toRightOf="@+id/description"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="normal" />



            </RelativeLayout>


            <TextView
                android:background="@drawable/rippleabout"
                android:layout_marginLeft="14dp"
                android:lines="1"
                android:layout_marginBottom="8dp"
                android:id="@+id/tvreview"
                android:layout_width="122dp"
                android:layout_height="38dp"
                android:textSize="14dp"
android:layout_below="@+id/productiv"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:textColor="@color/term_and_conditions"
                android:text="Review"
                ></TextView>
            <TextView
                android:background="@drawable/rippleqty"
                android:layout_marginRight="14dp"
                android:layout_below="@+id/productiv"
                android:lines="1"
                android:layout_marginBottom="8dp"
                android:id="@+id/tvreturn"
                android:layout_width="122dp"
                android:layout_height="38dp"
                android:textSize="14dp"

                android:layout_marginTop="4dp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/text_color_setting"
                android:text="Return"
                android:gravity="center"
                android:layout_alignParentRight="true"></TextView>

            <TextView
                android:background="@drawable/rippleqty"

                android:layout_below="@+id/tvreturn"
                android:lines="1"
                android:layout_marginBottom="8dp"
                android:id="@+id/tvvieworderdetails"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:textSize="14dp"

android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="0dp"
android:drawableEnd="@drawable/goo"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textColor="#13B3A7"
                android:textStyle="bold"
                android:text="View order Details"
                android:gravity="start|center_vertical"
                android:drawableRight="@drawable/goo"></TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>