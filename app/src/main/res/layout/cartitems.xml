<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="177dp"
    android:layout_margin="6dp"

    app:ignore="NamespaceTypo">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"

        android:layout_marginRight="3dp"
        android:elevation="3dp"

        app:cardBackgroundColor="@color/dl_row_selected"
        card_view:cardCornerRadius="0dp"

        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/platinum"></TextView>

            <ImageView
                android:id="@+id/productiv"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="11dp"

                android:cropToPadding="true"></ImageView>

            <RelativeLayout
                android:id="@+id/rlwishlist"
                android:layout_width="match_parent"
                android:layout_height="44dp"

                android:layout_below="@+id/productiv"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="11dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/platinum"></TextView>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/tvaddwishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="11dp"

                    android:layout_marginBottom="11dp"
                    android:lines="1"
                    android:text="Negotiate price of the product"
                    android:textColor="@color/black"
                    android:textSize="16dp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvaddwish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"
android:layout_toRightOf="@+id/tvaddwishlist"
                    android:layout_marginBottom="11dp"
                    android:lines="1"
                    android:text=" Make Offer"
                    android:textColor="#13B3A7"
                    android:textSize="16dp"
                    android:textStyle="italic" />
            </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_marginTop="22dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/productiv">


                <TextView
                    android:id="@+id/tvAssetType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="Asset Type"
                    android:textColor="@color/text_color_setting"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/tvAssetType"
                    android:lines="1"
                    android:text="Laptop"
                    android:textColor="#13B3A7"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description"
                    android:layout_marginTop="8dp"
                    android:lines="1"
                    android:text="qty:"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/tvqtytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description"
                    android:layout_marginTop="22dp"
                    android:lines="1"
                    android:text="Qty:"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="normal"

                   />

                <EditText
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/tvqtytext"
                    android:id="@+id/tvqtybtn"
                    android:layout_width="77dp"
                    android:layout_marginLeft="4dp"
                    android:layout_height="33dp"
                    android:layout_below="@+id/description"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="33dp"
                    android:background="@drawable/rippleqty"
                    android:drawableEnd="@drawable/qtydropdown"
                    android:drawableRight="@drawable/qtydropdown"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:singleLine="true"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:padding="2dp"

                    android:inputType="number"
                    android:focusable="auto"
                    android:textColor="@color/text_color_setting"
                    android:textSize="14dp"></EditText>
                <ImageView
                    android:id="@+id/ivgo"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
android:layout_below="@+id/description"
               android:layout_toRightOf="@+id/layio"
android:layout_marginLeft="8dp"

android:visibility="visible"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/gobtngrn">

                </ImageView>

                <LinearLayout
                    android:id="@+id/layio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_bg"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/less"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                       android:background="@color/platinum"   >

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/minus"
                            app:cardBackgroundColor="@color/platinum" />


                    </RelativeLayout>


                    <EditText
                        android:background="@drawable/edittext_bg"
                        android:id="@+id/prnumber"
                        android:layout_width="77dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
android:inputType="number"
                        android:text="0000000"
                        android:textColor="@android:color/black"
                        android:textSize="16dp" />


                    <RelativeLayout
                        android:id="@+id/more"
                        android:layout_width="33dp"
                        android:layout_height="33dp"

                        android:background="@color/platinum"
                     >

                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:src="@drawable/pluscircle"
                            app:cardBackgroundColor="@color/platinum" />

                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/deleteproductiv"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_below="@+id/tvAssetType"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                  android:layout_marginRight="6dp"

android:layout_marginTop="4dp"
                    android:src="@drawable/bin"></ImageView>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/platinum"></TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>