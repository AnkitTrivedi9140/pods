<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="177dp"
    android:layout_margin="6dp"

    app:ignore="NamespaceTypo">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"

        android:layout_marginRight="3dp"
        android:elevation="3dp"

        app:cardBackgroundColor="@color/dl_row_selected"
        card_view:cardCornerRadius="0dp"

        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/platinum"></TextView>

            <ImageView
                android:id="@+id/productiv"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="11dp"

                android:cropToPadding="true"></ImageView>

            <RelativeLayout
                android:id="@+id/rlwishlist"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/productiv"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="11dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/platinum"></TextView>

                <TextView
                    android:id="@+id/tvaddwishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"

                    android:layout_marginBottom="11dp"
                    android:lines="1"
                    android:text="MAKE OFFER"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="normal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/productiv">


                <TextView
                    android:id="@+id/tvAssetType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Asset Type"
                    android:textColor="@color/text_color_setting"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/tvAssetType"
                    android:lines="1"
                    android:text="Laptop"
                    android:textColor="@color/term_and_conditions"
                    android:textSize="18dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description"
                    android:layout_marginTop="8dp"
                    android:lines="1"
                    android:text="Laptop"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvqtybtn"
                    android:layout_width="99dp"
                    android:layout_height="33dp"
                    android:layout_below="@+id/description"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="33dp"
                    android:background="@drawable/rippleqty"
                    android:drawableEnd="@drawable/qtydropdown"
                    android:drawableRight="@drawable/qtydropdown"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:padding="6dp"
                    android:text="Qty:"
                    android:textColor="@color/text_color_setting"
                    android:textSize="14dp"></TextView>

                <LinearLayout
                    android:id="@+id/layio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_bg"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/less"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:background="@drawable/edittext_bg"
                        app:cardBackgroundColor="#fff"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="9dp">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:src="@drawable/minus"
                            app:cardBackgroundColor="@color/platinum" />


                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/prnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="18dp" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/more"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="6dp"
                        android:background="@drawable/edittext_bg"
                        app:cardBackgroundColor="@color/platinum"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="9dp">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:src="@drawable/pluscircle"
                            app:cardBackgroundColor="@color/platinum" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/deleteproductiv"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_below="@+id/description"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="11dp"


                    android:src="@drawable/bin"></ImageView>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/platinum"></TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>