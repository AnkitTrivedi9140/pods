<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="133dp"
    app:ignore="NamespaceTypo"

android:layout_margin="6dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"

        android:layout_marginRight="3dp"
        android:elevation="3dp"

        app:cardBackgroundColor="@color/dl_row_selected"
        card_view:cardCornerRadius="0dp"

        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:background="@color/platinum"
                android:layout_width="match_parent"
                android:layout_height="1dp"></TextView>

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/productiv"
            android:layout_width="99dp"
            android:layout_height="99dp"
android:layout_margin="11dp"

            android:cropToPadding="true"
            >
        </ImageView>
<RelativeLayout
    android:visibility="gone"
    android:id="@+id/rlwishlist"
    android:layout_below="@+id/productiv"
    android:layout_width="match_parent"
    android:layout_height="44dp">
            <TextView

                android:background="@color/platinum"
                android:layout_width="match_parent"
                android:layout_height="1dp"></TextView>
            <TextView
                android:id="@+id/tvaddwishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
                android:lines="1"

                android:text="ADD TO WISHLIST"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:textStyle="normal" />
</RelativeLayout>
        <RelativeLayout
android:layout_toRightOf="@+id/productiv"
            android:id="@+id/relative"

android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">






            <TextView
                android:id="@+id/tvAssetType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Asset Type"
                android:textColor="@color/text_color_setting"
                android:textSize="20dp"
                />



            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:lines="1"
                android:layout_below="@+id/tvAssetType"
                android:text="Laptop"
                android:textColor="@color/term_and_conditions"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvqty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:layout_marginTop="8dp"
                android:visibility="gone"
                android:lines="1"
                android:layout_below="@+id/description"
                android:text="Laptop"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_below="@+id/description"
                android:id="@+id/layio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
android:layout_marginTop="8dp"

                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/less"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@drawable/edittext_bg"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="9dp">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
android:layout_gravity="center"
                        app:cardBackgroundColor="@color/platinum"
                        android:src="@drawable/minus" />


                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/prnumber"
              android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
               android:textSize="18dp"
                    android:text="0"
                    android:textColor="@android:color/black"
                 />


                <androidx.cardview.widget.CardView
                    android:id="@+id/more"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="6dp"
                    app:cardBackgroundColor="@color/platinum"
                    app:cardCornerRadius="5dp"
                    android:background="@drawable/edittext_bg"
                    app:cardElevation="9dp">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        app:cardBackgroundColor="@color/platinum"
android:layout_gravity="center"
                        android:src="@drawable/pluscircle" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <ImageView
android:layout_below="@+id/description"
                android:id="@+id/deleteproductiv"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="11dp"
android:src="@drawable/bin"
                android:layout_alignParentEnd="true"


                android:layout_alignParentRight="true">
            </ImageView>
        </RelativeLayout>
            <TextView
android:layout_alignParentBottom="true"
                android:background="@color/platinum"
                android:layout_width="match_parent"
                android:layout_height="1dp"></TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>