<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivcut"
        android:layout_alignParentEnd="true"
        android:src="@drawable/profilecut"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:layout_margin="11dp"
        >
    </ImageView>

    <EditText

        android:clickable="false"
        android:lines="1"
        android:id="@+id/etfullname"
        android:textSize="16dp"
        android:layout_marginTop="55dp"
        android:hint="Your Full Name"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/tvheadingtext"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"

        ></EditText>

    <EditText
        android:id="@+id/etemail"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
        android:hint="Email Id"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/etfullname"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"

       />

    <RatingBar

        android:scaleX=".8"

        android:scaleY=".8"

        android:layout_marginTop="12dp"
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etemail"
        android:layout_marginLeft="0dp"
        android:layout_alignParentLeft="true" />
    <EditText
       android:layout_alignParentEnd="true"
        android:id="@+id/etrating"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
     android:editable="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/etemail"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"
        android:inputType="numberDecimal"
        android:layout_alignParentRight="true"></EditText>

    <EditText
        android:id="@+id/etremarks"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:hint="Your Remarks"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/etrating"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"
        android:gravity="start"
        ></EditText>
    <TextView
        android:layout_below="@+id/etremarks"
        android:background="@drawable/ripplenext"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="22dp"

        android:lines="1"

        android:id="@+id/tvsavepwd"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:textSize="18dp"
        android:layout_marginBottom="22dp"
        android:layout_centerHorizontal="true"

        android:textColor="@color/white"
        android:text="SUBMIT"
        android:gravity="center"
        ></TextView>

</RelativeLayout>