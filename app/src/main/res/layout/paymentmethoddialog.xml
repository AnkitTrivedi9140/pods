<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <ImageView
        android:id="@+id/ivcut"
        android:layout_alignParentEnd="true"
        android:src="@drawable/profilecut"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:layout_margin="11dp"
        >
    </ImageView>

<TextView
    android:justificationMode="inter_word"
    android:id="@+id/tvaccept"
    android:layout_below="@+id/ivcut"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Dear buyer your offer has been accepted by seller. Kindly upload proof of fund for further action."
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    ></TextView>
    <EditText
        android:id="@+id/etproof"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
        android:hint="proof of transaction"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/tvaccept"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/edittext_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawableEnd="@drawable/upload"
        android:lines="2"
        android:editable="false"
        android:focusable="false"
        android:clickable="true"
        android:drawableRight="@drawable/upload"></EditText>





    <TextView
        android:layout_below="@+id/etproof"
        android:background="@drawable/ripplenext"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="22dp"
        android:lines="1"
        android:id="@+id/tvsavepwd"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:textSize="18dp"
        android:layout_marginBottom="22dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="SUBMIT"
        android:gravity="center"
        ></TextView>
    <TextView
        android:justificationMode="inter_word"
        android:id="@+id/tvnote"
        android:layout_below="@+id/tvsavepwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOTE ;- (Last 3 month bank statement) or Bank RM telefone conformation or Bank to Bank confirmation or LOA (Letter of Attorney from TOP 10 Law Firm)."
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="22dp"
        ></TextView>
</RelativeLayout>