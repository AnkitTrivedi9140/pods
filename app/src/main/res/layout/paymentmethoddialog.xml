<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivcut"
        android:layout_alignParentEnd="true"
        android:src="@drawable/profilecut"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:layout_margin="11dp"
        >
    </ImageView>

    <EditText

        android:id="@+id/etdate"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
        android:hint="Enter date"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/ivcut"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"

        ></EditText>


    <EditText
        android:id="@+id/ettransationid"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
        android:hint="Enter transaction id"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/etdate"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"
        android:inputType="numberDecimal"
        ></EditText>
    <EditText
        android:id="@+id/etproof"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
        android:hint="proof of transaction"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/ettransationid"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"
        android:editable="false"
        android:clickable="false"
        ></EditText>

    <EditText
        android:id="@+id/etremarks"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:hint="Your Remarks"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/etproof"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"
        android:gravity="start"
        ></EditText>
    <TextView
        android:layout_below="@+id/etremarks"
        android:background="@drawable/ripplenext"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="22dp"

        android:lines="1"

        android:id="@+id/tvsavepwd"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:textSize="18dp"
        android:layout_marginBottom="22dp"
        android:layout_centerHorizontal="true"

        android:textColor="@color/white"
        android:text="MAKE OFFER"
        android:gravity="center"
        ></TextView>

</RelativeLayout>