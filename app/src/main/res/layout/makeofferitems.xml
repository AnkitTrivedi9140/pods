<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="11dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
   android:src="@color/platinum"
        android:id="@+id/ivproduct"
        android:layout_width="99dp"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="6dp"

        android:layout_height="99dp"></ImageView>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_toRightOf="@+id/ivproduct"
     android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvmargin"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/tvtotalqtyhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/tvproductnameremarkhead"
            android:textSize="14dp"
            android:text="List Price"


            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"></TextView>
<TextView
    android:layout_toRightOf="@+id/tvmargin"
    android:layout_marginRight="4dp"

    android:textColor="@color/black"
    android:id="@+id/tvremarks"
    android:textSize="14dp"
    android:layout_marginTop="8dp"
    android:layout_alignParentRight="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tvproductnamehead"
        android:textSize="14dp"
        android:text="Offer Price"

        android:layout_below="@+id/tvremarks"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_toRightOf="@+id/tvmargin"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tvremarks"
        android:id="@+id/tvproductname"
        android:layout_marginRight="4dp"

        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView

        android:layout_marginTop="4dp"

        android:id="@+id/tvtotalqtyhead"
        android:text="Total Quantity"
       android:layout_below="@+id/tvproductname"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/tvmargin"
        android:layout_below="@+id/tvproductname"
        android:id="@+id/tvtotalqty"
        android:textSize="14dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginRight="4dp"

        android:textColor="@color/black"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tvtotalqty"
        android:id="@+id/tvtotalamounthead"
        android:textSize="14dp"

        android:text="Offer total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_marginTop="4dp"
       android:layout_marginRight="4dp"

        android:textColor="@color/black"
        android:id="@+id/tvtotalamount"
        android:layout_toRightOf="@+id/tvmargin"
        android:textSize="14dp"
        android:layout_below="@+id/tvtotalqty"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

        <TextView
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tvtotalamount"
            android:id="@+id/tvofferdateheadss"
            android:textSize="14dp"

            android:text="Offer Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_toRightOf="@+id/tvmargin"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"

            android:textColor="@color/black"
            android:id="@+id/tvdatess"
            android:textSize="14dp"
            android:layout_below="@+id/tvtotalamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tvdatess"
            android:id="@+id/tvofferdateheadddd"
            android:textSize="14dp"

            android:text="Offer Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_toRightOf="@+id/tvmargin"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"

            android:textColor="@color/black"
            android:id="@+id/tvdateddd"
            android:textSize="14dp"
            android:layout_below="@+id/tvdatess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>






    </RelativeLayout>
        <TextView
            android:background="@drawable/rippleqty"

            android:layout_below="@+id/rl"

            android:id="@+id/tvviewofferdetails"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="14dp"
android:visibility="gone"

            android:layout_marginTop="0dp"
            android:drawableEnd="@drawable/goo"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColor="#13B3A7"
            android:textStyle="bold"
            android:text="View Your Offer Details"
            android:gravity="start|center_vertical"
            android:drawableRight="@drawable/goo"></TextView>





        <TextView
            android:layout_marginTop="4dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/rippleqty"

            android:layout_below="@+id/tvviewofferdetails"
            android:lines="1"
            android:layout_marginBottom="8dp"
            android:id="@+id/tvviewofferhistory"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="14dp"

            android:drawableEnd="@drawable/goo"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColor="#13B3A7"
            android:textStyle="bold"
            android:text="View Your Offer Details"
            android:gravity="start|center_vertical"
            android:drawableRight="@drawable/goo"></TextView>


    </RelativeLayout>
</androidx.cardview.widget.CardView>