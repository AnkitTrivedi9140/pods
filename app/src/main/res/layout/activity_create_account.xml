<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.CreateAccountActivity">




    <ImageView
        android:id="@+id/ivback"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_back"
        android:layout_margin="8dp"
        ></ImageView>
    <ScrollView
android:layout_marginTop="44dp"
        android:layout_marginBottom="44dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/mainrl"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
      >

        <TextView
            android:id="@+id/logtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Create an Account"></TextView>
        <EditText
            android:layout_centerHorizontal="true"
            android:id="@+id/usernameEt"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="8dp"
            android:layout_below="@+id/logtv"

            android:hint="Your Full Name"

            android:inputType="textPersonName"
            android:padding="8dp"

            />

        <EditText
            android:layout_centerHorizontal="true"
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="8dp"

            android:fontFamily="sans-serif-medium"

            android:padding="8dp"
            android:hint="Email ID"
            android:layout_below="@+id/usernameEt"/>


        <EditText
            android:layout_centerHorizontal="true"
            android:id="@+id/passwordEt"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="8dp"

            android:fontFamily="sans-serif-medium"
            android:hint="@string/hint_password"

            android:padding="8dp"

            android:layout_below="@+id/emailEt"/>
        <EditText
            android:layout_centerHorizontal="true"
            android:id="@+id/passwordagainEt"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:drawableLeft="@drawable/ic_pwdagain"
            android:drawablePadding="8dp"

            android:fontFamily="sans-serif-medium"
            android:hint="Confirm Password"

            android:padding="8dp"

            android:layout_below="@+id/passwordEt"/>


    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/tvcreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordagainEt"
        android:text="By creating an account you agree to our \nTerms of Service and Privacy Policy."
        >

    </TextView>

        <RelativeLayout
            android:layout_below="@+id/tvcreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp">
            <Button
                android:layout_centerHorizontal="true"

                android:id="@+id/logInBtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:text="Create Account"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp"
                />

        </RelativeLayout>

    </RelativeLayout>
    </ScrollView>
    <RelativeLayout
android:id="@+id/rlaccountconfirmation"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

                    <TextView


android:layout_marginTop="222dp"
                        android:id="@+id/createtv"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Account Confirmation"
                        android:textColor="@color/term_and_conditions"

                        android:layout_height="wrap_content"
                        ></TextView>
        <TextView

            android:layout_marginTop="16dp"

            android:id="@+id/createtvv"
            android:textSize="18dp"
            android:layout_below="@+id/createtv"
            android:layout_width="wrap_content"
           android:layout_marginLeft="22dp"
            android:text="Your Account verification successfully! \nPress continue to Sign In."
            android:textColor="@color/black"

            android:layout_height="wrap_content"
            ></TextView>

        <Button

android:layout_centerHorizontal="true"
            android:id="@+id/btncontinue"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/button_bg"

            android:text="Continue..."

            android:textColor="@color/white"
            android:textSize="16dp"

            android:layout_below="@+id/createtvv"
            />
    </RelativeLayout>
</RelativeLayout>