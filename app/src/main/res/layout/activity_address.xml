<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aboutpod.ConnectwithPodActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivabout"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:text="Add Address Details"
                android:textColor="@color/black"
                android:textSize="22dp"></TextView>

            <TextView
                android:id="@+id/tvheadingtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvheading"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:text="Our representative will connect with your soon."
                android:textColor="@color/manatee"
                android:textSize="16dp"
                android:visibility="gone"></TextView>

            <EditText
                android:id="@+id/etaddress1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tvheadingtext"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittext_bg"
                android:hint="Address1"
                android:padding="10dp"
                android:textSize="16dp"></EditText>

            <EditText
                android:id="@+id/etaddress2"
                android:layout_width="match_parent"

                android:layout_height="50dp"
                android:layout_below="@+id/etaddress1"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittext_bg"
                android:hint="Address2"
                android:padding="10dp"
                android:textSize="16dp"></EditText>


            <EditText
                android:id="@+id/etaddress3"
                android:layout_width="match_parent"

                android:layout_height="50dp"
                android:layout_below="@+id/etaddress2"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittext_bg"
                android:hint="Address3"
                android:padding="10dp"
                android:textSize="16dp"></EditText>

            <EditText

                android:id="@+id/etphone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/etaddress3"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittext_bg"
                android:hint="Phone No"
                android:padding="10dp"
                android:textSize="16dp"
                android:inputType="phone"
                ></EditText>
            <com.hbb20.CountryCodePicker
                android:id="@+id/et1"
                android:layout_width="44dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittext_bg"
                android:gravity="center"
                android:paddingLeft="8dp"
                app:ccp_contentColor="@color/term_and_conditions"
                app:ccp_textSize="14dp"
                android:layout_marginLeft="16dp"

                android:layout_below="@+id/etphone"
                >

            </com.hbb20.CountryCodePicker>



            <EditText
                android:id="@+id/etcountry"
                android:layout_toRightOf="@+id/et1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/etphone"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittext_bg"
                android:hint="Country"
                android:padding="10dp"
                android:textSize="16dp"
              android:clickable="false"
                android:editable="false"
                android:focusable="false"
                ></EditText>
            <EditText

                android:id="@+id/etzipcode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/etcountry"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittext_bg"
                android:hint="Pin Code"
                android:padding="10dp"
                android:textSize="16dp"
                android:inputType="phone"
                ></EditText>


            <EditText
android:visibility="gone"
                android:id="@+id/etstate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/etzipcode"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittext_bg"
                android:hint="State"
                android:padding="10dp"
                android:textSize="16dp"

                ></EditText>

            <TextView
                android:id="@+id/tvsubmit"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/etzipcode"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="28dp"

                android:layout_marginRight="16dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/ripplenext"
                android:gravity="center"

                android:lines="1"

                android:text="SUBMIT "
                android:textColor="@color/white"
                android:textSize="18dp"></TextView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>