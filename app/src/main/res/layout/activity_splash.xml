<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@color/term_and_conditions"
    >

<ImageView
    android:id="@+id/tvicon"
    android:layout_width="wrap_content"
    android:layout_height="66dp"
    android:textSize="55dp"
    android:textStyle="bold"
    android:layout_marginTop="55dp"
    android:layout_centerHorizontal="true"
android:src="@drawable/whitelogo"
    android:text="Pod"
    ></ImageView>
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ivlogo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/podsplash"
        app:civ_border_color="@color/white"
        app:civ_border_width="5dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="22dp"
        app:civ_shadow_color="#fff"

        android:layout_below="@+id/tvicon"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_below="@+id/ivlogo"
        android:id="@+id/tvwelcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"

        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Welcome to POD"
        ></TextView>
    <TextView
        android:layout_below="@+id/tvwelcode"
        android:id="@+id/tvwelcomedetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"

        android:lines="1"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="INNOVATION YOU CAN TRUST"
        ></TextView>
    <TextView
android:visibility="gone"
        android:lines="1"
        android:layout_below="@+id/tvwelcomedetails"
        android:id="@+id/tvwelcomedetailsnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="adipiscing elit."
        ></TextView>

    <TextView
        android:background="@drawable/rippleok"
android:layout_marginLeft="14dp"
        android:lines="1"
        android:layout_marginBottom="33dp"
        android:id="@+id/tvsignup"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:textSize="14dp"

        android:gravity="center"
        android:layout_marginTop="2dp"
android:layout_alignParentBottom="true"
        android:textColor="@color/text_color_setting"
        android:text="Sign up"
        ></TextView>
    <TextView
        android:background="@drawable/ripplenext"
        android:layout_marginRight="14dp"
        android:layout_alignParentBottom="true"
        android:lines="1"
     android:layout_marginBottom="33dp"
        android:id="@+id/tvsignin"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:textSize="14dp"

        android:layout_marginTop="2dp"
       android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:text="Sign in"
        android:gravity="center"
        android:layout_alignParentRight="true"></TextView>
</RelativeLayout>