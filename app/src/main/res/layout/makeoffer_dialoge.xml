<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivcut"
        android:layout_alignParentEnd="true"
        android:src="@drawable/profilecut"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:layout_margin="11dp"
        >
    </ImageView>

    <EditText
        android:editable="false"
        android:clickable="false"
        android:lines="1"
        android:id="@+id/etpassword"
        android:textSize="16dp"
        android:layout_marginTop="55dp"
        android:hint="Product type"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/tvheadingtext"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"

        ></EditText>
    <EditText
        android:id="@+id/etqty"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
        android:hint="Enter your quantity"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/etpassword"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"

        android:inputType="number"
        ></EditText>


    <EditText
        android:id="@+id/etofferammount"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
        android:hint="Enter offer amount"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/etqty"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"
android:inputType="numberDecimal"
        ></EditText>
    <EditText
        android:id="@+id/ettotalammount"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
        android:hint="Enter total amount"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/etofferammount"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"
        android:editable="false"
        android:clickable="false"
        ></EditText>

    <EditText
        android:id="@+id/etaddress"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
        android:hint="Please choose address"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/ettotalammount"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/edittext_bg"
       android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:editable="false"
        android:focusable="false"
        android:drawableEnd="@drawable/qtydropdown"
        android:clickable="true"

        tools:ignore="RtlCompat"></EditText>

    <EditText
        android:id="@+id/etremarks"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:hint="Your Remarks"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/etaddress"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"
        android:gravity="start"
        android:visibility="gone"
        ></EditText>
    <TextView
        android:layout_below="@+id/etaddress"
        android:background="@drawable/ripplenext"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="22dp"

        android:lines="1"

        android:id="@+id/tvsavepwd"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:textSize="18dp"
        android:layout_marginBottom="22dp"
        android:layout_centerHorizontal="true"

        android:textColor="@color/white"
        android:text="MAKE OFFER"
        android:gravity="center"
        ></TextView>

</RelativeLayout>