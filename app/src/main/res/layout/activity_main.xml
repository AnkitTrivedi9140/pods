<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:id="@+id/mainactivity"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/term_and_conditions"

            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp">

                <ImageView
                    android:id="@+id/ivtoggle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="visible"
                    android:src="@drawable/toggle"></ImageView>

                <ImageView
                    android:id="@+id/tvicon"
                    android:layout_width="66dp"
                    android:layout_height="40dp"

                    android:src="@drawable/removebgpodicon"
                    android:text="Pod"
android:layout_marginLeft="66dp"
                    android:textSize="55dp"
                    android:textStyle="bold"></ImageView>

                <ImageView
                    android:id="@+id/ivcart"
                    android:layout_width="33dp"
                    android:layout_height="33dp"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"

                    android:src="@drawable/cart"></ImageView>

                <RelativeLayout
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/cartcircle">

                    <TextView
                        android:id="@+id/tvcartsize"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:textStyle="bold"></TextView>

                </RelativeLayout>



            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/rlsearch"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_below="@+id/toolbar"
            android:background="@color/term_and_conditions"



            >

            <EditText
                android:id="@+id/putwaysearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:layout_centerHorizontal="true"

                android:background="@drawable/edittextbackground"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="18dp"
                android:hint="Search your product"
                android:padding="10dp"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/ivgo"
                android:layout_width="38dp"
                android:layout_height="38dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:layout_marginTop="6dp"
                android:layout_marginRight="26dp"
                android:src="@drawable/gobtngrn">

            </ImageView>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="122dp"
            android:layout_marginBottom="55dp"
            android:elevation="0dp"
            app:cardCornerRadius="12dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp">

                    <ImageView
                        android:id="@+id/ivallproduct"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/imageallproduct"


                        >

                    </ImageView>

                    <TextView
                        android:id="@+id/tvall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivallproduct"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="6dp"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:text="All"></TextView>

<RelativeLayout
    android:id="@+id/rlcategory"
    android:layout_toRightOf="@+id/ivallproduct"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/productrv"
android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal"
                        android:scrollbars="horizontal">

                    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>
<RelativeLayout

    android:id="@+id/pager"
    android:layout_below="@+id/rlcategory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
                  <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="144dp"

                        android:layout_marginTop="16dp"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/SliderDots"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"

                        android:layout_marginStart="8dp"

                        android:layout_marginEnd="8dp"
                       android:layout_centerHorizontal="true"
                        android:orientation="horizontal"

                        android:layout_alignParentBottom="true"
                        />
</RelativeLayout>
